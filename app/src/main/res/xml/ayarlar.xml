<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:title="Titreşim"
        android:summary="Butona dokunulduğunda titreşim oluşsun mu?"
        android:key="titresim"
        android:summaryOn="Titreşim açık"
        android:summaryOff="Titreşim kapalı"
        />
    <!--Aslında summaryOn summaryOff eklendiği
    zaman summary kısmına gerek kalmıyor.-->
    <CheckBoxPreference
        android:title="Ses"
        android:summary="Butona dokunulduğunda ses efekti çalsın mı?"
        android:key="ses"
        android:summaryOn="Ses açık"
        android:summaryOff="Ses kapalı"
        />
    <ListPreference
        android:entries="@array/renkler"
        android:entryValues="@array/renk_pozisyon"
        android:key="arkaplan"
        android:title="Arkaplan"
        android:summary="Arkaplan rengi seçiniz."
        />

</PreferenceScreen>